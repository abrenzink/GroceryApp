@page "/groceryitemservice"
@using Data
@using Models
@using Services
@inject GroceryService GroceryService

<h3>Productos Disponibles</h3>

@if (isLoading)
{
    <p><em>Cargando productos...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (products == null || !products.Any())
{
    <div class="alert alert-warning" role="alert">
        No hay productos disponibles en este momento.
    </div>
}
else
{
    <p>Se encontraron @products.Count productos</p>
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;">
                    }
                    else
                    {
                        <div style="height:200px; background-color:#ccc; display:flex; align-items:center; justify-content:center;">
                            <span>Sin imagen</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p><strong>Precio:</strong> $@product.Price.ToString("F2")</p>
                        <p><strong>Categor√≠a:</strong> @product.Category</p>
                        <p><strong>Stock:</strong> @product.Stock unidades</p>
                        <p><small>ID: @product.Id | Disponible: @product.IsAvailable</small></p>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<GroceryItem>? products;
    private bool isLoading = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Console.WriteLine("=== Componente: Cargando productos ===");
            products = await GroceryService.GetAvailableProductsAsync();
            Console.WriteLine($"=== Componente: Productos cargados: {products?.Count ?? 0} ===");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            Console.WriteLine($"=== Componente: Error - {ex.Message} ===");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
        }
    }
}