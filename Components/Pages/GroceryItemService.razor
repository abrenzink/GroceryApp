@page "/groceryitemservice"
@using Data
@using Models
@using Services
@using Microsoft.AspNetCore.Components.Authorization
@inject GroceryService GroceryService
@inject CartState CartService
@inject IGroceryItemService IGroceryItemService
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

@if (CartService.showCart)
{
    <div class="cart-overlay">
        <CartView MyCart="Cart" />
    </div>
}
else
{
    <button class="btn btn-primary openCartBtn" @onclick="@(() => CartService.openCart())">Open Cart</button>
}
<hr>
<h1 class="product-title">Available Products</h1>
@if (isLoading)
{
    <p><em>Loading products...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> @errorMessage
    </div>
}
else if (products == null || !products.Any())
{
    <div class="alert alert-warning" role="alert">
        No products available at the moment.
    </div>
}
else
{
    <div class="mb-3">
        <input class="searchBar" type="text" @bind="searchTerm" placeholder="Search products..." aria-label="Search products" />
        <button class="btn btn-primary searchBtn" @onclick="Search">Search</button>
    </div>

    <p>Found @products.Count products</p>
    <div class="row">
        @foreach (var product in products)
        {
            <div class="col-md-4 mb-4">
                <div class="card-grocery">
                    <div class="card-content">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top product-image" alt=""
                                 style="height:200px; object-fit:cover;">
                        }
                        else
                        {
                            <div
                                style="height:200px; background-color:#ccc; display:flex; align-items:center; justify-content:center;">
                                <span>No image</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p><strong>Price:</strong> $@product.Price.ToString("F2")</p>
                            <p><strong>Category:</strong> @product.Category</p>
                            <p><strong>Stock:</strong> @product.Stock units</p>
                            <p><small>ID: @product.Id | Available: @product.IsAvailable</small></p>
                        </div>
                    </div>
                    <AuthorizeView>
                        <Authorized>
                            @if (!CartService.isInCart(product))
                            {
                                <button class="addTocartBtn" @onclick="@(() => CartService.addToCart(product))">
                                    Add to Cart
                                </button>
                            }
                            else
                            {
                                <button class="addTocartBtn" @onclick="@(() => CartService.incrementQuantity(product))">
                                    Add One More To Cart
                                </button>
                            }
                        </Authorized>
                        <NotAuthorized>
                            <button class="addTocartBtn" @onclick="AlertLogin">
                                Add to Cart
                            </button>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        }
    </div>
}

@implements IDisposable
@code {
    private string searchTerm = "";

    private List<GroceryItem>? products;
    private bool isLoading = true;
    private string? errorMessage;

    /// <summary>
    /// Gets the current shopping cart from the state service.
    /// </summary>
    ShoppingCart Cart => CartService.Cart;

    /// <summary>
    /// Initializes the component, loading products and subscribing to cart updates.
    /// </summary>
    private async Task Search()
    {
        isLoading = true;

        if (!string.IsNullOrWhiteSpace(searchTerm))
            products = await IGroceryItemService.SearchAsync(searchTerm);
        else
            products = await GroceryService.GetAvailableProductsAsync();

        isLoading = false;
    }
    protected override async Task OnInitializedAsync()
    {
        try
        {

            // Subscribe to cart changes so the UI updates when items are added
            CartService.OnChange += StateHasChanged;

            // Initialize cart with user context
            await CartService.InitializeAsync();

            Console.WriteLine("=== Component: Loading products ===");

            products = await GroceryService.GetAvailableProductsAsync();
            Console.WriteLine($"=== Component: Products loaded: {products?.Count ?? 0} ===");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
            Console.WriteLine($"=== Component: Error - {ex.Message} ===");
            Console.WriteLine($"Stack Trace: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
        }
    }

    /// <summary>
    /// Displays an alert to the user to login.
    /// </summary>
    private async Task AlertLogin()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Please login to add items to cart.");
    }

    /// <summary>
    /// Unsubscribes from cart events when the component is disposed.
    /// </summary>
    public void Dispose()
    {
        CartService.OnChange -= StateHasChanged;
    }
}