@page "/profile"
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@attribute [Authorize]

<PageTitle>Profile</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>My Profile</h3>
                </div>
                <div class="card-body">
                    <AuthorizeView>
                        <Authorized>
                            <p><strong>Name:</strong> @context.User.Identity?.Name</p>
                            <p><strong>Email:</strong> @context.User.Claims.FirstOrDefault(c => c.Type ==
                                ClaimTypes.Email)?.Value</p>
                            <p><strong>Role:</strong> @context.User.Claims.FirstOrDefault(c => c.Type ==
                                ClaimTypes.Role)?.Value</p>
                        </Authorized>
                    </AuthorizeView>

                    <hr />

                    <form action="/logout" method="post">
                        <input type="hidden" name="__AntiforgeryToken" value="@GetAntiforgeryToken()" />
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery { get; set; } = default!;
    [CascadingParameter] HttpContext? HttpContext { get; set; }

    private string? GetAntiforgeryToken()
    {
        return Antiforgery.GetAndStoreTokens(HttpContext!).RequestToken;
    }
}
